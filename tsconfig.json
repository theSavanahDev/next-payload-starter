{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@/app/*": ["./src/app/(frontend)/*"],
			"@/components/*": ["./src/components/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/payload/*": ["./src/app/(payload)/*"],
			"@/payload-config": ["./src/payload.config.ts"],
			"@/payload-access/*": ["./src/payload/access/*"],
			"@/payload-blocks/*": ["./src/payload/blocks/*"],
			"@/payload-collections/*": ["./src/payload/collections/*"],
			"@/payload-fields/*": ["./src/payload/fields/*"],
			"@/payload-globals/*": ["./src/payload/globals/*"],
			"@/payload-hooks/*": ["./src/payload/hooks/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
